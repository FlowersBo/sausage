.refresh .bindImg {
  width: 50rpx;
  height: 50rpx;
  background-color: transparent;
  z-index: 1;
}

.refresh .ball{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background: #FF9900;
  border-radius: 50%;
  border: 2rpx solid #bba270;
  color: #fff;
  font-weight: bold;
  opacity: 0;
  z-index: -1;
  font-size: 20rpx;
  white-space: normal;
  box-sizing:border-box;
  padding:4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}