/* component/console/index.wxss */
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 600rpx;
  height: 360rpx;
  /* background-color: #a37416; */
  background-image: linear-gradient(135deg, #a37416, #F7C67E);
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -200rpx 75rpx 0 75rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.drawer_box_content {
  width: 600rpx;
  height: 200rpx;
  /* background-color: #fff; */
  border-radius: 20rpx;
  padding: 10rpx;
  color: #fff;
}
.drawer_box_contentText{
  width: 100%;
  height: 100%;
  line-height: 200rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.authorization_title{
  font-size: 44rpx;
  font-weight: bold;
}
/* .authorization_content{
  text-indent: 42rpx;
} */
.btnWrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.drawer_box_btn {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(135deg, #f7a94f, #cc9595);
  /* background-color: #FEA91F; */
  color: #fff;
  font-size: 32rpx;
}