.propTimeBody .propTimeMain .propTop{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  font-weight: bold;
}
.propTimeBody .propTimeMain .propTop .noBtn{
  color: #aaa;
}
.propTimeBody .propTimeMain .propTop .okBtn{
  color: #F75910;
}