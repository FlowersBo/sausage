/* component/tabBar/tabBar.wxss */
/* 底部导航 */
.wtx_nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #fff;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  padding-bottom:calc(env(safe-area-inset-bottom)/3);
}
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #fff;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  padding-bottom:calc(env(safe-area-inset-bottom)/3);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  position: relative;
  padding: 12rpx 0 26rpx;
}

.img {
  width: 50rpx;
  height: 50rpx;
}

.iconTextColor{
  font-size: 28rpx;
  margin-top: 4rpx;
  color: #646464;
}

.selectedColor{
  color: #FF9900;
}
