/* pages/commodity/commodityDetail/commodityDetail.wxss */
@import '/iconCss/icon.wxss';
.pointLocation {
  width: 98%;
  margin: 0 auto;
  padding-bottom: 150rpx;
}

/* tab切换 */
.nav_tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  color: #333;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 20rpx 0;
}


.nav_tab {
  line-height: 100rpx;
}

.show {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  background: #f8f8f8;
}

.hidden {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  background: #f75910;
}

.nav_underline {
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 70rpx;
  border-radius: 8rpx;
  background: #ef9ba8;
}

/* 日期 */
.timeWrap {
  width: 60%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.cellWrap {
  width: 260rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #c9c9c9;
  background: #fff;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  position: relative;
}

.cellWrap .cell {
  width: 100%;
}

.cell picker {
  width: 100%;
  font-size: 28rpx;
}

.icon-backwardcyclyo {
  font-size: 60rpx;
  color: rgb(110, 110, 110);
}

.icons {
  transform: rotate(180deg);
}

.timg {
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -25rpx;
  width: 50rpx;
  height: 50rpx;
}

.anniu {
  width: 200rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lt {
  width: 26rpx;
  height: 26rpx;
  margin-top: 4rpx;
  margin-right: 6rpx;
}

.lt:last-child {
  margin-left: 6rpx;
}

/* 排行列表 */
.tabTit {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  z-index: 1;
  text-align: center;
  border-bottom: solid 1px #c9c9c9;
  background: #fff;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.tabTit .coding_flash_image {
  width: 14rpx;
  height: 24rpx;
  margin-left: .066667rem;
}

.list>.list_item>.info {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  text-align: center;
  border-bottom: 1px solid #E8E8E8;
}

.flex1 {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.flex1:first-child,
.list .list_item .info .title {
  width: 300rpx;
}

.flex1:nth-child(2),
.list .list_item .info .price {
  width: 150rpx;
}

.flex1:nth-child(3),
.list .list_item .info .num {
  width: 150rpx;
}



.detail-btn {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 6rpx;
  border: 1rpx solid #dadada;
  background-color: #eee;
  color: #333;
  margin-left: 10rpx;
}

/* 点位明细 */
.detail {
  margin: 20rpx 0 0;
  padding: 15rpx;
  border-radius: 10rpx;
  background: #f8f8f8;
  text-align: center;
}

.explain {
  display: inline-block;
  font-size: 28rpx;
  font-weight: bold;
}


/* 排行列表 */
.goodstabTit {
  /*734rpx*/
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  z-index: 1;
  text-align: center;
  border-bottom: solid 1px #c9c9c9;
  background: #fff;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 6rpx;
}

.goods {
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods:nth-child(1) {
  width: 200rpx;
}

.goods:nth-child(2) {
  width: 294rpx;
}

.goods:nth-child(3) {
  width: 120rpx;
}

.goods:nth-child(4) {
  width: 120rpx;
}

.goodstabTit .goods_image {
  width: 14rpx;
  height: 24rpx;
  margin-left: .066667rem;
}

.goodslist {
  width: 100%;
}

.goodslistItem {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #E8E8E8;
}

.title-waste {
  box-sizing: border-box;
  padding: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}

.goods-title {
  /* transform: translateY(50%); */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wasteBtn {
  width: 130rpx;
  padding: 6rpx 0;
  text-align: center;
  border-radius: 10rpx;
  /* border: 1rpx solid #dadada; */
  background-color: #f75910;
  color: #fff;
  margin-top: 20rpx;
}

.goods-item {
  width: 534rpx;
  border-left: 1rpx solid #E8E8E8;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-info {
  width: 100%;
  font-size: 24rpx;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E8E8E8;
}

.goods-info:last-child {
  border-bottom: none;
}

.goods-productName {
  width: 294rpx;
  box-sizing: border-box;
  padding: 0 6rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-amout,
.goods-saleSum {
  width: 120rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.noDetail {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #f75910;
  font-size: 30rpx;
  text-align: center;
}

/* 小历日历 */
.xlCalendarWrap {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background: rgba(0, 0, 0, .6);
}

.ballWindow {
  width: 100%;
  height: 720rpx;
  position: fixed;
  bottom: -720rpx;
  left: 0;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 1000;
}


.ballWindow-btn {
  width: 100%;
  height: 70rpx;
  text-align: right;
  line-height: 70rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  color: rgb(216, 179, 12);
}

.xlCalendar {
  width: 100%;
  height: 640rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  background: #fff;
  overflow: hidden;
  position: absolute;
  bottom: 6rpx;
  left: 0;
  z-index: 1000;
}

/* 点位选择 */
.time_point {
  width: 97%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
}

.titles {
  font-size: 30rpx;
}

.pointWrap {
  display: flex;
  align-items: center;
}

.point {
  height: 60rpx;
  border-radius: 10rpx;
  border: 2rpx solid #ccc;
  font-size: 24rpx;
  position: relative;
  margin-right: 60rpx;
}
.point:last-child{
  margin-right: 0;
}

.picker {
  height: 100%;
  box-sizing: border-box;
  padding: 0 70rpx 0 16rpx;
  line-height: 60rpx;
}

.point_timg {
  position: absolute;
  top: 8rpx;
  right: 4rpx;
  width: 50rpx;
  height: 48rpx;
  z-index: -1;
  /* margin-left: 6rpx;
  margin-top: 4rpx; */
}