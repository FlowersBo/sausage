/* pages/confirmation_order/cashierDesk/cashierDesk.wxss */
@import '../../../iconCss/icon.wxss'; 
.cashierDesk{
  width: 97%;
  margin: 0 auto;
}

.group{
  background: #eee;
}
.labelWrap{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx;
}
.radio{
  margin-left: auto;
  padding-right: 60rpx;
}
.icons{
  font-size: 50rpx;
  margin-right: 10rpx;
}

.btn{
  width: 97%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #E65C00;
  border-radius: 20rpx;
  position: fixed;
  bottom: 150rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
 }
 
 .modalDlg{
  width: 620rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  margin: -300rpx -310rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 16rpx;
  font-size: 28rpx;
  font-weight: bold;
 }
 .title{
   margin-bottom: 20rpx;
   font-size: 36rpx;
 }
 .btnWrap{
   width: 620rpx;
   display: flex;
   justify-content: space-around;
   margin-top: 120rpx;
   box-sizing: border-box;
 }
 .mainBtn{
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #E65C00;
  border-radius: 35rpx;
  color: #fff;
 }
 .mainBtn:first-child{
   background: #fff;
   color: #000;
   border: 2rpx solid #ccc;
 }
