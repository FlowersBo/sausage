/* pages/confirmation_order/confirmation_order.wxss */
@import '../../iconCss/icon.wxss';

page {
  height: 100%;
  background: #fff;
  font-family: -apple-system-font, Arial, Helvetica, sans-serif;
  color: #333;
  font-size: 32rpx;
  line-height: 1.42857;
}

/* 地址 */
.contion {
  width: 96%;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #ddd;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
}


.contion .con_top {
  width: 90%;
  font-size: 32rpx;
  box-sizing: border-box;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.icon-backwardcyclyo {
  transform: rotate(180deg);
  font-size: 50rpx;
  color: rgb(83, 83, 83);
}

/* 物品展示 */
.container {
  width: 100%;
  display: flex;
  padding-bottom: 150rpx;
  flex-direction: column;
  box-sizing: border-box;
}

.section {
  display: flex;
  flex-direction: column;
  padding-left: 50rpx;
  padding-right: 50rpx;
}



.section-good .total {
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 0;
  color: #f75910;
  text-align: right;
  border-bottom: 1rpx solid #c9c9c9;
}

.good {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  height: 215rpx;
  border-bottom: 1px solid #ccc;
}

.good:last-child {
  border-bottom: none;
}



.cover,
.cover image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.stepper {
  text-align: right;
}

.content {
  flex: 1;
  width: 400rpx;
  margin-left: 20rpx;
}

.content .text {
  color: #363636;
  width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.content .name {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.content .specifications {
  width: 245rpx;
  font-size: 24rpx;
  color: #999;
}

.content .press {
  font-size: 28rpx;
  color: #363636;
  margin-top: 10rpx;
}

.content .price {
  font-size: 36rpx;
  color: #e4452a;
  margin-top: 10rpx;
}


.section-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  margin-bottom: 0;
  border-top: 1px solid #c9c9c9;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 99;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.section-bottom .btn {
  width: 260rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fdfffd;
  background-color: #f75910;
}

.section-bottom .btn-default {
  color: #363636;
  background-color: #eee;
}

.section-bottom .btn-primary {
  color: #fdfffd;
  background-color: #f75910;
}



.section-bottom .total {
  flex: 1;
  text-align: left;
  font-size: 26rpx;
}



.total .totalPrice {
  font-size: 26rpx;
  vertical-align: middle;
}

.total .totalPrice text {
  color: #e4452a;
  font-size: 30rpx;
}

/* 合计金额 */
.money {
  margin: 0 50rpx;
  padding-top: 20rpx;
  border-top: 1px solid #c9c9c9;
}

.money view {
  margin: 10rpx 0;
  font-size: 28rpx;
}

.money view text:last-child {
  float: right;
}

.money .total {
  margin-top: 20rpx;
  padding-top: 10rpx;
  text-align: right;
  border-top: 1px solid #c9c9c9;
  line-height: 38rpx;
}

.money .total text:last-child {
  margin-left: 20rpx;
}

/* 支付方式 */
.weui-cell_input {
  margin: 20rpx 50rpx;
}

.weui-cell_input label {
  display: block;
  padding: 20rpx 0;
  font-size: 30rpx;
  border-bottom: 1px solid #c9c9c9;
}

.weui-cell_input label image {
  width: 31rpx;
  height: 27rpx;
}

.weui-cell_input label radio {
  float: right;
  margin-top: 5rpx;
}

/* 订单备注 */
.remarks {
  margin: 20rpx 50rpx;
}

.remarks text {
  font-size: 28rpx;
}

textarea {
  float: right;
  width: 494rpx;
  height: 200rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 10rpx;
}

.content .price text:nth-child(2) {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.characterIcon {
  position: relative;
  display: block;
}

.circle {
  width: 100rpx;
  height: 100rpx;
  flex: auto;
  margin: 10rpx;
  flex-grow: 0;
  flex-shrink: 0;
  background-color: #999;
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;

}

.characterIcon text {
  position: absolute;
  font-size: 50rpx;
  color: #fff;
  top: 25rpx;
  left: 35rpx;
}