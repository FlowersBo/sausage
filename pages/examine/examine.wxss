/* pages/examine/examine.wxss */
@import'../../app.wxss';

/* pages/order/order.wxss */
page {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 日期 */
.con {
  display: flex;
  flex-direction: row-reverse;
}

.con mp-cell {
  font-size: 28rpx;
  margin-right: 20rpx;
  border: 1px solid #c9c9c9;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.con mp-cell picker {
  float: left;
  padding-left: 25rpx;
}

.con mp-cell image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 6rpx;
  margin-right: 10rpx;
}

/* tab切换 */
.nav_after{
	width: 100%;
	display: flex;
	flex-direction: row;
	background: #ccc;
	margin-top: 20rpx;
}
.afterItem{
	flex: 1;
	position: relative;
}
.nav_item{
	position: absolute;
	right: -8rpx;
	bottom: -14rpx;
	min-width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	line-height: 30rpx;
	text-align: center;
	font-size: 16rpx;
	background: #fff;
	color: #333;
  border: 1rpx solid #bbb;
}

.nav_tab {
  position: sticky;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  color: #333;
  border-radius: 10rpx;
  overflow: hidden;
}


.nav_tab {
  height: 70rpx;
  line-height: 70rpx;
  margin-bottom: 20rpx;
}

.show {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  background: #ddd;
  border-right: 1rpx solid rgb(153, 153, 153);
  font-weight: bold;
}

.show:last-child{
	border-right: none;
}

.hidden {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  background: #f75910;
  font-weight: bold;
}

.nav_underline {
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 70rpx;
  border-radius: 8rpx;
  background: #ef9ba8;
}

/* list */
.list {
  padding: 16rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background: #f8f8f8;
  color: #333;
}

.list_tit {
  font-size: 24rpx;
  /* margin-bottom: 40rpx; */
}

.list_tit view {
  display: inline-block;
}

.right {
  float: right;
  color: blue;
}

.nosuc {
  color: red;
}

.color {
  color: #c9c9c9;
  margin: 0 15rpx;
}

.list_con {
  /* display: flex; */
}

.list_con view {
  font-size: 28rpx;
  font-weight: bold;
  margin: 14rpx 0;
  /* text-align: right; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

view .name {
  flex: 4;
  text-align: left;
}
