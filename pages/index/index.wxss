/*弹性盒模型*/
.box {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}

.list>.list_item>.info {
	display: flex;
	justify-content: space-between;
	box-sizing: border-box;
	padding: 20rpx 10rpx;
	text-align: center;
	border-bottom: 1px solid #E8E8E8;
}

.iconfont {
	width: 100%;
	height: 2rpx;
	border-radius: 1rpx;
}


/* 统计表格 */
.history-table-wrap {
	width: 710rpx;
	/* height: 578rpx; */
	overflow-y: scroll;
	overflow-x: hidden;
	margin-bottom: 30rpx;
}

/* 表格代码   */
.table {
	border-right: 0;
	border-bottom: 0;
}

.tr {
	width: 100%;
	display: flex;
	/* justify-content: space-between; */
}

.trs {
	width: 100%;
	box-sizing: border-box;
	border-left: 1px solid #dadada;
	/* padding: 0 2rpx;
	margin-left: 2rpx; */
}

.th{
	background-color: #f75910;
	font-size: 28rpx;
	color: #fff;
	flex: 1;
	padding: 16rpx 0;
	text-align: center;
	border-right: 1px solid #dadada;
}

.th:last-child{
	border-right: none;
}

.td {
	flex: 1;
	padding: 16rpx 0;
	border-bottom: 1px solid #dadada;
	border-right: 1px solid #dadada;
	text-align: center;
	font-size: 20rpx;
	color: #333;
}

/* 月区间 */
.pickerWrap{
	width: 100%;
	margin-bottom: 20rpx;
}
.page-date{
	margin-left: auto;
	width: 360rpx;
	height: 60rpx;
	border: 1rpx solid #ddd;
	border-radius: 30rpx;
	text-align: center;
	line-height: 60rpx;
	background: #fff;
	color: #333;
	font-size: 24rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	padding: 0 30rpx;
}
.page-date-img{
	width: 50rpx;
	height: 48rpx;
	margin-top: 4rpx;
}