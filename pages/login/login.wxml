<!-- 绑定手机号 -->
<view class="content">

    <text class="tit">加盟商登录</text>

    <view class="phone-box">
        <text class="phone">手机号：</text>
        <input name="phone" type="number" placeholder="请输入手机号" maxlength="11" name="phone" class="number" bindinput="bindInputPhoneNumber" />
    </view>

    <view class="phone-box">
        <text class="phone">验证码：</text>
        <input name="phoneCode" placeholder="请输入验证码" class="number" placeholder-style="color:#bbb" bindinput="bindInputVerificationCode" />
        <view bindtap="getVerificationCode" class="getNum" hover-class="getNum_hover" hover-stay-time="100">{{verificationControlText}}</view>
    </view>

    <button bindtap="startLogin">登录</button>
</view>