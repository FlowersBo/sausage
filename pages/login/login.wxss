.content {
  width: 100%;
  height: auto;
  padding: 0 50rpx;
  box-sizing: border-box;
}
text.tit{
  display: block;
  width: 100%;
  font-size: 55rpx;
  padding: 158rpx 0;
  text-align: center;
}
.phone-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 89rpx;
  padding-left: 60rpx;
  margin-bottom: 20rpx;
  background: #eee;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.phone {
  font-size: 28rpx;
  color: #333;
}

.number {
  width: 82%;
  height: 89rpx;
  color: #333;
  font-size: 28rpx;
}

button::after{
  border: none;
}

.getNum {
  width: 150rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  border-radius: 8rpx;
  background: rgba(248, 112, 57, 1);
}

button.submit {
  display: block;
  width:100%;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  margin-top: 80rpx;
  border-radius: 8rpx;
  background: rgba(248, 112, 57, 1);
}
.submit_hover,.getNum_hover{
 transform: scale(0.98, 0.98);
}