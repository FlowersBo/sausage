/* pages/my_order/my_order.wxss */
/*切换栏*/

.nav_tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  color: #333;
  overflow: hidden;
}


.nav_tab {
  height: 80rpx;
  line-height: 80rpx;
  background: #e8e8e8;
}

.show {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: center;

}

.hidden {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  color: #f75910;
}

.nav_underline {
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 70rpx;
  border-radius: 8rpx;
  background: #ef9ba8;
}

/* 内容 */
.list {
  margin: 20rpx 40rpx;
  border-bottom: 1px solid #c8c8c8;
}

.list .tit {
  margin: 10rpx 0 0;
}

.list .tit text:first-child {
  display: inline-block;
  width: 500rpx;
  font-size: 30rpx;
  overflow: hidden;
  /*自动隐藏文字*/
  text-overflow: ellipsis;
  /*文字隐藏后添加省略号*/
  white-space: nowrap;
  /*强制不换行*/
}

.list .tit text:last-child {
  float: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 7rpx;
}

.list .time {
  font-size: 24rpx;
  color: #999;
}
.list .more_detail>view{
  display: inline-block;
}
.list .more_detail .img {
  width: 480rpx;
  height: 150rpx;
  overflow: hidden;
}

.list .more_detail  image {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin:20rpx 10rpx;
}
.list .more_detail .right{
  float: right;
  font-size: 26rpx;
  margin-top: 40rpx;
  text-align: right;
}.list .more_detail .right .num{
  font-size: 22rpx;
  color: #999;
}
.btn{
  height: 60rpx;
  text-align: right;
  margin-bottom: 30rpx;
}
.btn button{
  float: right;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  margin: 0;
  font-size: 26rpx;
  color: #333;
  margin-left: 20rpx;
  background: #e8e8e8;
}
.btn button:first-child{
  color: #fff;
  background: #f75910;
}