@import'../../app.wxss';

/* pages/order/order.wxss */
page {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 日期 */
.con {
  display: flex;
  flex-direction: row-reverse;
}

.con mp-cell {
  font-size: 28rpx;
  margin-right: 20rpx;
  border: 1px solid #c9c9c9;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.con mp-cell picker {
  float: left;
  padding-left: 25rpx;
}

.con mp-cell image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 6rpx;
  margin-right: 10rpx;
}

/* tab切换 */

.nav_tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  color: #333;
  border-radius: 10rpx;
  overflow: hidden;
}


.nav_tab {
  height: 70rpx;
  line-height: 70rpx;
  margin: 20rpx 0;
}

.show {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  background: #f8f8f8;
}

.hidden {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  background: #f75910;
}

.nav_underline {
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 70rpx;
  border-radius: 8rpx;
  background: #ef9ba8;
}

/* list */
.list {
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background: #f8f8f8;
}

.list_tit {
  font-size: 24rpx;
  margin-bottom: 15rpx;
}

.list_tit view {
  display: inline-block;
}

.right {
  float: right;
  color: blue;
}

.nosuc {
  color: red;
}

.color {
  color: #c9c9c9;
  margin: 0 15rpx;
}

.list_con {
  display: flex;
}

.list_con view {
  font-size: 30rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

view .name {
  flex: 4;
  text-align: left;
}
.TradeID{
  flex: 2;
}

.volume {
  flex: 2;
}

.money {
  flex: 1;
}

.mode {
  flex: 3;
}

/* 异常订单 */
.abnormal {
  color: #f75910;
}