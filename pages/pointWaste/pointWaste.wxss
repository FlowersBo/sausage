/* pages/pointWaste/pointWaste.wxss */
.pointWaste{
  width: 100%;
}
.title{
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  margin-top: 20rpx;
}
.address{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.wasteStatement{
  width: 98%;
  margin: 40rpx auto 0;
  height: 160rpx;
  display: flex;
  background: #F2F2F2;
  border-radius: 10rpx;
}

.statement{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.statement:first-child{
  border-right: 1rpx solid #ddd;
}

/* canvas */
.container {
	width: 100%;
  height: 800rpx;
  margin-top: 50rpx;
	background: #fff;
	text-align: center;
	margin: 0 auto;
	overflow: hidden;
}

.container .tit {
	height: 60rpx;
	line-height: 60rpx;
	font-size: 30rpx;
	background: #E8E8E8;
}

ec-canvas {
	width: 100%;
	height: 430rpx;
	margin-top: 10rpx;
}

canvas {
	width: 100%;
	height: 430rpx;
	margin-top: 10rpx;
}

.statement-waste{
  color: red;
  font-weight: bold;
	animation: viewlinear 2s linear infinite;
}

@keyframes viewlinear {
	/** 第一种写法**/
	0%{transform: scale(.8); opacity: .8;}
	25%{transform:  scale(1.4); opacity: 1;}
	100%{transform:  scale(.8); opacity: .8;}
}