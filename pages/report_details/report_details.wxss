/* pages/report_details/report_details.wxss */
page {
	padding-top: 20rpx;
}

h5 {
	margin-left: 50rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.con {
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 20rpx;
	box-sizing: border-box;
	padding: 10rpx 20rpx;
}

/* 日期 */
.cellWrap{
	width: 180rpx;
	height: 30rpx;
	line-height: 30rpx;
	border: 1px solid #c9c9c9;
	background: #fff;
	border-radius: 15rpx;
	margin-right: 20rpx;
	box-sizing: border-box;
	padding: 0 15rpx;
	position: relative;
}

.cellWrap .cell {
	width: 100%;
}

.cell picker {
	width: 100%;
	font-size: 20rpx;
}

.con mp-cell image {
	position: absolute;
	right: 0;
	top: 0;
	width: 30rpx;
	height: 30rpx;
	margin-top: 2rpx;
}

.container {
	width: 100%;
	height: 500rpx;
	margin-bottom: 50rpx;
	text-align: center;
	margin: 20rpx auto;
	overflow: hidden;
}

@media (min-width: 480px) {
	/* 仅在 480px 或更宽的屏幕上生效的样式规则 */
	.container {
		height: 200rpx;
		margin: 0 auto;
	}
}

canvas {
	display: block;
	width: 90%;
	margin: 0 auto;
}

.anniu-box {
	flex: 1;
	display: flex;
	justify-content: space-around;
	box-sizing: border-box;
	padding: 0 110rpx;
}

.anniu-box view {
	width: 100rpx;
	height: 30rpx;
	text-align: center;
	line-height: 30rpx;
	font-size: 14rpx;
	text-align: center;
	border: 1px solid #c9c9c9;
	border-radius: 15rpx;
	background: #f8f8f8;
	box-sizing: border-box;
}

