/* pages/tableDetail/tableDetail.wxss */
.tableWrap{
  width: 100%;
}
.title{
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  margin-top: 20rpx;
}
.address{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 点位明细 */
.detail {
	margin: 20rpx 0 10rpx;
	padding: 15rpx;
	border-radius: 10rpx;
	background: #f8f8f8;
	text-align: center;
}

.explain {
	display: inline-block;
	font-size: 30rpx;
	font-weight: bold;
}

/* 统计表格 */
.history-table-wrap {
  width: 710rpx;
  margin: 0 auto;
	/* height: 578rpx; */
	overflow-y: scroll;
	overflow-x: hidden;
}

/* 表格代码   */
.table {
	border-right: 0;
	border-bottom: 0;
	margin-bottom: 30rpx;
}

.tr {
	width: 100%;
	display: flex;
	/* justify-content: space-between; */
}

.trs {
	width: 100%;
	box-sizing: border-box;
	border-left: 1px solid #dadada;
	/* padding: 0 2rpx;
	margin-left: 2rpx; */
}

.th{
	background-color: #f75910;
	font-size: 28rpx;
	color: #fff;
	flex: 1;
	padding: 16rpx 0;
	text-align: center;
	border-right: 1px solid #dadada;
}

.th:last-child{
	border-right: none;
}

.td {
	flex: 1;
	padding: 16rpx 0;
	border-bottom: 1px solid #dadada;
	border-right: 1px solid #dadada;
	text-align: center;
	font-size: 20rpx;
	color: #333;
}

/* canvas */
.container {
	width: 100%;
	height: 500rpx;
	background: #f8f8f8;
	text-align: center;
	margin: 10rpx auto;
	overflow: hidden;
}

.container .tit {
	height: 60rpx;
	line-height: 60rpx;
	font-size: 30rpx;
	background: #E8E8E8;
}

ec-canvas {
	width: 100%;
	height: 430rpx;
	margin-top: 10rpx;
}

canvas {
	width: 100%;
	height: 430rpx;
	margin-top: 10rpx;
}