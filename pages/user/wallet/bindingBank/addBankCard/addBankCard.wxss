/* pages/user/wallet/bindingBank/addBankCard/addBankCard.wxss */
page {
  width: 100%;
  background-color: #f2f2f2;
}

.bankCardWrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bankCard {
  width: 95%;
  height: 500rpx;
  margin-top: 30rpx;
}

.inpWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.inp {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #DFDFDF;
  box-sizing: border-box;
  padding-left: 25rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;

}

.verificationWrap {
  width: 100%;
  display: flex;
  justify-content: left;
}

.verificationWrap .inp {
  width: 300rpx;
}

.verification {
  margin-left: 20rpx;
  width: 220rpx;
  height: 90rpx;
  background-color: #F75910;
  color: #fff;
  border-radius: 10rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
}

.verification_btn {
  width: 680rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 140rpx;
  background-color: #F75910;
  border-radius: 30rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
}