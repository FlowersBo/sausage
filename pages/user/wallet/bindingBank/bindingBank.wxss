/* pages/user/wallet/bindingBank/bindingBank.wxss */
@import '../../../../iconCss/icon.wxss';
page{
  width: 100%;
  background-color: #f2f2f2;
}
.bankCardWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bankCard{
  width: 95%;
  height: 500rpx;
  margin-top: 30rpx;
}
.backWrap{
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  background-color: rgb(42, 170, 3);
  color: #f2f2f2;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 30rpx;
  /* color: #600030; */
}
.bac_a{
  background-color: #32639E;
}
.backType{
  color: #fff;
  font-size: 32rpx;
}
.back{
  width: 100%;
}
.backNumber{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}
.dotWrap{
  display: inline-block;
}
.dot{
  display: inline-block;
  width: 10rpx;      
  height: 10rpx;      
  border: 1rpx solid #f2f2f2;      
  border-radius: 10rpx;      
  background-color: #f2f2f2;  
  margin: 0 4rpx;    
}
.number{
  display: flex;
  align-items: center;
}
.addBackCard{
  width: 100%;
  height: 100rpx;
  margin-top: 100rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-shuaqiaqiapianyinhangqia{
  color: #596C8E;
  margin-right: 10rpx;
  font-size: 50rpx;
}
.add-text{
  color: #7D8EA7;
  font-size: 32rpx;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 600rpx;
  height: 360rpx;
  /* background-color: #a37416; */
  background-image: linear-gradient(135deg, #a37416, #F7C67E);
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -200rpx 75rpx 0 75rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.drawer_box_content {
  width: 600rpx;
  height: 200rpx;
  /* background-color: #fff; */
  border-radius: 20rpx;
  padding: 10rpx;
  color: #fff;
}
.drawer_box_contentText{
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.authorization_title{
  font-size: 32rpx;
  font-weight: bold;
}
.authorization_content{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;

}
.maskBtnWrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.drawer_box_btn {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(135deg, #ebb16f, #ebb6b6);
  /* background-color: #FEA91F; */
  color: #fff;
  font-size: 32rpx;
}
.maskInput{
  width: 400rpx;
  height: 60rpx;
  background: #fff;
  color: #333;
  padding-left: 10rpx;
  font-size: 28rpx;
}