/* pages/user/wallet/wallet.wxss */
.walletWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wallet {
  width: 97%;
}

.balance {
  width: 100%;
  height: 360rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-image: linear-gradient(135deg, #b4a7a7,#9cdfdf);
  color: #fff;
}

.balanceTitle {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}

.btnWrap {
  display: flex;
}

.btn {
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  background-image: linear-gradient(135deg, #84ac29, #84ac29);
}

.balanceSumWrap {
  width: 50%;
  display: flex;
  align-items: center;
  padding-left: 90rpx;
}

.balanceSum {
  margin-right: 40rpx;
  font-size: 40rpx;
}

.recharge {
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  padding: 0 6rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  background-image: linear-gradient(135deg, #ee6a2d, #df9191);
}

.balanceDetail {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  box-sizing: border-box;
  align-items: center;
  margin-top: 10rpx;
}

.detail-item {
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 0;
}

.item-money {
  font-size: 40rpx;
}

/* 绑定手机号 */
.bindingPhone {
  width: 100%;
  height: 160rpx;
  background-image: linear-gradient(135deg, #b4a7a7,#9cdfdf);
  /* background: #eee; */
  color: #fff;
  margin-top: 20rpx;
  /* border-radius: 20rpx; */
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bindingPhone:last-child {
  height: 250rpx;
  margin-top: 2rpx;
}

.phoneReveal {
  display: flex;
  justify-content: space-between;
}

.bankCardName {
  color: rgb(14, 223, 77);
  font-size: 28rpx;
  padding-top: 20rpx;
}

.binding {
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-image: linear-gradient(135deg, #84ac29, #84ac29);
}

.authentication {
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  border-radius: 2rpx;
  background-image: linear-gradient(135deg, #b4a7a7,#9cdfdf);
  color: #fff;
}

.incomeDetailBtn {
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-image: linear-gradient(135deg, #84ac29, #84ac29);
}

.income {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.incomeDetail {
  margin-top: 30rpx;
}

.incomeDetail-item {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #e6e1e1;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 40rpx;
}


.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 600rpx;
  height: 360rpx;
  /* background-color: #a37416; */
  background-image: linear-gradient(135deg, #a37416, #F7C67E);
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -200rpx 75rpx 0 75rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.drawer_box_content {
  width: 600rpx;
  height: 200rpx;
  /* background-color: #fff; */
  border-radius: 20rpx;
  padding: 10rpx;
  color: #fff;
}
.drawer_box_contentText{
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.authorization_title{
  font-size: 32rpx;
  font-weight: bold;
}
.authorization_content{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;

}
.maskBtnWrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.drawer_box_btn {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(135deg, #ebb16f, #ebb6b6);
  /* background-color: #FEA91F; */
  color: #fff;
  font-size: 32rpx;
}
.maskInput{
  width: 400rpx;
  height: 60rpx;
  background: #fff;
  color: #333;
  padding-left: 10rpx;
  font-size: 28rpx;
}