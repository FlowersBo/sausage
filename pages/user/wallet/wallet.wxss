/* pages/user/wallet/wallet.wxss */
.walletWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wallet {
  width: 97%;
}

.balance {
  width: 100%;
  height: 360rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-image: linear-gradient(135deg, #b4a7a7,#9cdfdf);
  color: #fff;
}

.balanceTitle {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}

.btnWrap {
  display: flex;
}

.btn {
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  background-image: linear-gradient(135deg, #84ac29, #84ac29);
}

.balanceSumWrap {
  width: 50%;
  display: flex;
  align-items: center;
  padding-left: 90rpx;
}

.balanceSum {
  margin-right: 40rpx;
  font-size: 40rpx;
}

.recharge {
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  padding: 0 6rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  background-image: linear-gradient(135deg, #ee6a2d, #df9191);
}

.balanceDetail {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  box-sizing: border-box;
  align-items: center;
  margin-top: 10rpx;
}

.detail-item {
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 0;
}

.item-money {
  font-size: 40rpx;
}

/* 绑定手机号 */
.bindingPhone {
  width: 100%;
  height: 160rpx;
  background-image: linear-gradient(135deg, #b4a7a7,#9cdfdf);
  /* background: #eee; */
  color: #fff;
  margin-top: 20rpx;
  /* border-radius: 20rpx; */
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bindingPhone:last-child {
  height: 250rpx;
  margin-top: 2rpx;
}

.phoneReveal {
  display: flex;
  justify-content: space-between;
}

.bankCardName {
  color: rgb(14, 223, 77);
  font-size: 28rpx;
  padding-top: 20rpx;
}

.binding {
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-image: linear-gradient(135deg, #84ac29, #84ac29);
}

.authentication {
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  border-radius: 2rpx;
  background-image: linear-gradient(135deg, #b4a7a7,#9cdfdf);
  color: #fff;
}

.incomeDetailBtn {
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-image: linear-gradient(135deg, #84ac29, #84ac29);
}

.income {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.incomeDetail {
  margin-top: 30rpx;
}

.incomeDetail-item {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #e6e1e1;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 40rpx;
}